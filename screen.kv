<RoundedLabel@Label>:
    font_size: 30
    text_size: None, None 
    halign: 'center'
    background_normal: ''
    background_color: 0, 0, 0, 0  
    canvas.before:
        # Desenha a borda
        Color:
            rgba: (0.9, 0.1, 0.5, 0.8)
        RoundedRectangle:
            pos: self.x - 3, self.y - 3
            size: self.width + 3 * 2, self.height + 3 * 2
            radius: [20]  # Raio das bordas arredondadas da borda

        # Desenha o retângulo principal (cor do botão)
        Color:
            rgba: 0.1, 0.2, 0.7, 0.8  # Cor do retângulo principal
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20]  # Raio das bordas arredondadas
    color: 1, 1, 1, 1  # Cor do texto

<RoundedButton@Button>:
    font_size: 30
    text_size: 700, None 
    halign: 'center'
    background_normal: ''
    background_color: 0, 0, 0, 0  
    canvas.before:
        # Desenha o retângulo principal (cor do botão)
        Color:
            rgba: 0.5, 0, 1, 0.7  # Cor do botão (roxo)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20]  # Raio das bordas arredondadas
    color: 1, 1, 1, 1  # Cor do texto

<MyLayout>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 30
        spacing: 20

        RoundedLabel:
            id: label_0
            text: '0'
            border_color: (0.1, 0.1, 0.5, 0.8)
            border_width: 3
            
        RoundedButton:
            id: btn_clear
            text: 'Clear'
            on_press: app.clear_acc_res()
        BoxLayout:
            spacing: self.width - (self.width / 1.05)
            RoundedButton:
                id: btn_openpar
                text: '('
                on_press: app.on_key_pressed('(')
            RoundedButton:
                id: btn_closepar
                text: ')'
                on_press: app.on_key_pressed(')')
            RoundedButton:
                id: btn_truediv
                text: ':'
                on_press: app.sum_truediv()
            RoundedButton:
                id: btn_backspace
                text: '<-'
                on_press: app.backspace()

        BoxLayout:
            spacing: self.width - (self.width / 1.05)
            RoundedButton:
                id: btn_7
                text: '7'
                on_press: app.on_key_pressed(7)
            RoundedButton:
                id: btn_8
                text: '8'
                on_press: app.on_key_pressed(8)
            RoundedButton:
                id: btn_9
                text: '9'
                on_press: app.on_key_pressed(9)
            RoundedButton:
                id: btn_mult
                text: 'x'
                on_press: app.sum_mult()

        BoxLayout:
            spacing: self.width - (self.width / 1.05)
            RoundedButton:
                id: btn_4
                text: '4'
                on_press: app.on_key_pressed(4)
            RoundedButton:
                id: btn_5
                text: '5'
                on_press: app.on_key_pressed(5)
            RoundedButton:
                id: btn_6
                text: '6'
                on_press: app.on_key_pressed(6)
            RoundedButton:
                id: btn_minus
                text: '-'
                on_press: app.sum_subtract()

        BoxLayout:
            spacing: self.width - (self.width / 1.05)
            RoundedButton:
                id: btn_1
                text: '1'
                on_press: app.on_key_pressed(1)
            RoundedButton:
                id: btn_2
                text: '2'
                on_press: app.on_key_pressed(2)
            RoundedButton:
                id: btn_3
                text: '3'
                on_press: app.on_key_pressed(3)
            RoundedButton:
                id: btn_plus
                text: '+'
                on_press: app.sum_add()
            

        BoxLayout:
            spacing: self.width - (self.width / 1.05)
            RoundedButton:
                id: btn_sw_signal
                text: '+/-'
                on_release: app.switch_signal()
            RoundedButton:
                id: btn_0
                text: '0'
                on_press: app.on_key_pressed(0)
            RoundedButton:
                id: btn_dot
                text: '.'
                on_press: app.on_key_pressed('.')
            RoundedButton:
                id: btn_equals
                text: '='
                on_press: app.equals_res()
